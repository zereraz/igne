{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Igne",
  "version": "0.2.0",
  "identifier": "com.igne.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Igne",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "trafficLightPosition": {
          "x": 20,
          "y": 16
        },
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/64x64.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["md", "markdown", "mdx"],
        "mimeType": "text/markdown",
        "name": "Markdown",
        "description": "Markdown document",
        "role": "Editor"
      }
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc1QUE4NUY3QjBCOUUwMDEKUldRQjRMbXc5NFdxZFJ5TDN4SGZzL3Z0aHFGbjRieXhHY3NWNGZYS3hMMFJCRVdKV1M0NWU4NFEK",
      "endpoints": [
        "https://github.com/zereraz/igne/releases/latest/download/latest.json"
      ]
    }
  }
}
