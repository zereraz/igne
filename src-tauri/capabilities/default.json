{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "fs:default",
    { "identifier": "fs:allow-read", "allow": [{ "path": "**" }] },
    { "identifier": "fs:allow-write", "allow": [{ "path": "**" }] },
    { "identifier": "fs:allow-exists", "allow": [{ "path": "**" }] }
  ]
}